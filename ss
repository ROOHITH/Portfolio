        ];

        // Function to get the parameter value from the URL
        function getParameterByName(name, url) {
          if (!url) url = window.location.href;
          name = name.replace(/[\[\]]/g, "\\$&");
          var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
            results = regex.exec(url);
          if (!results) return null;
          if (!results[2]) return "";
          return decodeURIComponent(results[2].replace(/\+/g, " "));
        }

        const projectIndex = getParameterByName("project");

        if (
          projectIndex !== null &&
          !isNaN(projectIndex) &&
          projectIndex >= 0 &&
          projectIndex < projectData.length
        ) {
          const selectedProject = projectData[projectIndex];

          $(".project-title").text(selectedProject.name);
          $(".project-type").text(selectedProject.type);
          $(".project-image").attr("src", selectedProject.imageUrl);
          $(".project-description").text(
            selectedProject.description || "No description available."
          );

          const technologiesList = selectedProject.technologies || [];
          const technologiesHtml = technologiesList
            .map((tech) => `<li>${tech.name} (${tech.category})</li>`)
            .join("");
          $(".project-technologies").html(technologiesHtml);

          // Show only if duration is available
          if (selectedProject.duration) {
            $(".project-duration").text(selectedProject.duration);
          } else {
            $(".project-duration").parent().hide();
          }

          // Show only if there are team members
          const teamMembersList = selectedProject.teamMembers || [];
          const teamMembersHtml = teamMembersList
            .map((member) => `<li>${member}</li>`)
            .join("");
          $(".project-team-members").html(teamMembersHtml);
          if (teamMembersList.length === 0) {
            $(".project-team-members").parent().hide();
          }

          $(".visit-website-link").attr("href", selectedProject.githubUrl);
        } else {
          $(".project-title").text("Project Not Found");
          $(".project-type").text("");
          $(".project-image").attr("src", "path/to/default/image.jpg");
          $(".project-description").text(
            "The requested project was not found."
          );
        }
      });
